<Window
    x:Class="ScoreCalculator.Views.CustomUserControl.MyDialog.BatchAdditionsKnowledgeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScoreCalculator.Views.CustomUserControl.MyDialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:myenum="clr-namespace:ScoreCalculator.Models.MyEnum"
    Title="批量增加"
    Width="800"
    Height="600"
    mc:Ignorable="d">
    <Window.Resources>
        <ObjectDataProvider
            x:Key="SecurityDimensionEnumKey"
            MethodName="GetValues"
            ObjectType="{x:Type core:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="myenum:SecurityDimensionEnum" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider
            x:Key="TestStatusKey"
            MethodName="GetValues"
            ObjectType="{x:Type core:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="myenum:TestStatus" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid Margin="5" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="5"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                x:Name="MyNameTextBlock"
                MinWidth="100"
                VerticalAlignment="Center"
                TextAlignment="Left">
                名字Name
            </TextBlock>
            <TextBox
                x:Name="MyNameTextBox"
                Width="150"
                Height="20"
                Margin="5,0,0,0" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="5"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                MinWidth="100"
                VerticalAlignment="Center"
                TextAlignment="Left">
                所述安全层面
            </TextBlock>
            <ComboBox
                x:Name="cengmian_comboBox"
                Width="150"
                Height="20"
                ItemsSource="{Binding Source={StaticResource SecurityDimensionEnumKey}}"
                SelectionChanged="ComboBox_SelectionChanged" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Margin="5"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                MinWidth="100"
                VerticalAlignment="Center"
                TextAlignment="Left">
                所述指标
            </TextBlock>
            <ComboBox
                x:Name="zhibiao_ComboBox"
                Width="150"
                Height="20" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Margin="5"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                x:Name="Feature"
                MinWidth="100"
                VerticalAlignment="Center"
                TextAlignment="Left">
                对象类型Feature
            </TextBlock>
            <ComboBox
                x:Name="feature_ComboBox"
                Width="150"
                Height="20" />
        </StackPanel>

        <StackPanel
            Grid.Row="4"
            Margin="5"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                MinWidth="100"
                VerticalAlignment="Center"
                TextAlignment="Left">
                对象标签Tag
            </TextBlock>
            <TextBox
                x:Name="tagBox"
                Width="150"
                Height="20"
                Margin="5,0,0,0" />
        </StackPanel>
        <StackPanel
            Grid.Row="5"
            Margin="5"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                MinWidth="100"
                VerticalAlignment="Center"
                TextAlignment="Left">
                测试状态
            </TextBlock>
            <ComboBox
                x:Name="testStatus_ComboBox"
                Width="150"
                Height="20"
                ItemsSource="{Binding Source={StaticResource TestStatusKey}}" />

        </StackPanel>
        <StackPanel
            Grid.Row="6"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" TextAlignment="Center">
                知识内容
            </TextBlock>
            <TextBox
                x:Name="ContentBox"
                Width="600"
                Height="250"
                Margin="5,0,0,0"
                VerticalContentAlignment="Top"
                AcceptsReturn="True"
                MinLines="20"
                TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Grid.Row="7">
            <Button Click="Button_Click">确认</Button>
        </StackPanel>
    </Grid>
</Window>
