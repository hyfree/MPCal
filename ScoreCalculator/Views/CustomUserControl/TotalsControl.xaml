            Grid.Row="4"
            Grid.Column="0"
            BorderBrush="Black"
            BorderThickness="1" />
        <Border
            Grid.Row="5"
            Grid.Column="0"
            BorderBrush="Black"
            BorderThickness="1" />
        <Border
            Grid.Row="2"
            Grid.RowSpan="3"
            Grid.Column="1"
            BorderBrush="Black"
            BorderThickness="1" />
        <Border
            Grid.Row="2"
            Grid.RowSpan="3"
            Grid.Column="2"
            BorderBrush="Black"
